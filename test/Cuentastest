
import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class CuentasTests {

    @Test
    void testCuentaAhorrosNoPermiteNegativos() {
        double saldo = 100;
        double retiro = 200;
        boolean resultado = (saldo - retiro >= 0);
        assertFalse(resultado, "La cuenta de ahorros no debe permitir saldo negativo");
    }

    @Test
    void testCuentaCorrientePermiteSobregiro() {
        double saldo = 0;
        double retiro = 400;
        boolean resultado = (saldo - retiro >= -500);
        assertTrue(resultado, "La cuenta corriente permite hasta -500 de sobregiro");
    }
}
